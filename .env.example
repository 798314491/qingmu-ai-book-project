# Environment Variables Configuration

# Database Configuration
MYSQL_ROOT_PASSWORD=root123456
MYSQL_DATABASE=markdown_notes
MYSQL_USER=markdown_user
MYSQL_PASSWORD=markdown_password

# Redis Configuration
REDIS_PASSWORD=

# Application Configuration
APP_ENV=production
APP_PORT=8080

# JWT Configuration
JWT_SECRET=your-secret-key-here-please-change-in-production

# Alibaba Cloud Configuration
DASHSCOPE_API_KEY=your-dashscope-api-key-here

# Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=/data/markdown-notes/uploads

# OSS Configuration (if using Alibaba Cloud OSS)
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
OSS_ACCESS_KEY_ID=your-access-key-id
OSS_ACCESS_KEY_SECRET=your-access-key-secret
OSS_BUCKET_NAME=your-bucket-name

# Email Configuration (for password reset, optional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_FROM=noreply@markdown-notes.com

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8080/api
VITE_WS_URL=ws://localhost:8080/ws